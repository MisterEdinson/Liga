<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#B90A60B5"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvPositionTeamTable"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:text="5"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imgTeamTable"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        tools:src="@drawable/liverpool"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tvNameTeamTable"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:text="Manchester"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGameLostTeamTable"
        android:text="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGameDrawTeamTable"
        android:text="2"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGameWinTeamTable"
        android:text="3"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvGameCountTeamTable"
        android:text="4"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPointTeamTable"
        android:text="4"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:textSize="16sp" />

</LinearLayout>